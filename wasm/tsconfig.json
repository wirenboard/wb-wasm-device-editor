{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./submodule/homeui/frontend/app/scripts/*"],
      "~scripts/*": ["./submodule/homeui/frontend/app/scripts/*"],
      "~styles/*": ["./submodule/homeui/frontend/app/styles/*"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "custom.d.ts"],
  "exclude": ["node_modules", "dist", "submodule"]
}
